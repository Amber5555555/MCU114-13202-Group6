<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ProgressFragment">

    <!--
        android:gravity="center" 會讓 LinearLayout 內部所有的子元件
        (ProgressBar 和 TextView) 在可用空間中整體水平和垂直居中。
        android:orientation="vertical" 會讓它們垂直排列。
    -->

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:max="100"
        tools:progress="75" /> <!-- tools:progress 可以在預覽中看到進度條效果 -->

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        tools:text="Working... 75%" /> <!-- tools:text 可以在預覽中看到文字效果 -->

</LinearLayout>